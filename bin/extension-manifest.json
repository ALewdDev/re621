{
    "manifest_version": 2,
    "name": "%DISPLAYNAME%",
    "short_name": "%NAME%",
    "version": "%VERSION%",
    "description": "%DESCRIPTION%",
    "author": "%AUTHOR%",

    "icons": {},

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "content_scripts": [
        {
            "matches": [
                "https://e621.net/*",
                "https://e926.net/*"
            ],
            "css": [],
            "js": [],
            "js-lib": [
                "./lib/jquery@3.5.0/jquery.min.js",
                "./lib/jqueryui@1.12.1/jquery-ui.min.js",
                "./lib/jquery.hotkeys@0.1.0/jquery.hotkeys.min.js",
                "./lib/filesaver.js@1.3.8/FileSaver.min.js",
                "./lib/jszip@3.3.0/jszip.min.js",
                "./lib/re621.lazysizes@1.0.0/lazysizes.min.js"
            ]
        }
    ],

    "permissions": [
        "storage",
        "tabs",
        "https://api.github.com/*",
        "https://static1.e621.net/*",
        "https://cdn.jsdelivr.net/gh/re621/re621@master/dist/avoid-posting.json"
    ],

    "resources": {
        "re621_css": "style.min.css",
        "re621_dnp": "https://cdn.jsdelivr.net/gh/re621/re621@master/dist/avoid-posting.json"
    },

    "web_accessible_resources": ["injector.js"]
}
